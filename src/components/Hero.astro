---
import { translations } from '../i18n/translations';
import Logo from './Logo.astro';
import TypingText from './TypingText.astro';

const lang = Astro.url.searchParams.get('lang') || 'fr';
const t = translations[lang];
---
<section class="relative bg-[#1a1b26] text-white py-8">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center space-y-6">
      <div class="mb-2">
        <Logo className="h-20 mx-auto" />
      </div>
      <div class="vintage-terminal">
        <div class="terminal-header">
          <div class="terminal-buttons">
            <span></span>
            <span></span>
            <span></span>
          </div>
          <div class="terminal-title">terminal@unite99:~</div>
        </div>
        <div class="terminal-body">
          <div class="terminal-line">
            <span class="terminal-prompt">$</span>
            <TypingText 
              text={t.heroTitle}
              speed={2}
              chunkSize={5}
              class="terminal-text"
            />
            <span class="terminal-cursor">_</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .vintage-terminal {
    background: #2b2b2b;
    border-radius: 8px;
    box-shadow: 0 0 0 1px #464646,
                0 0 0 4px rgba(0, 0, 0, 0.1),
                0 0 30px rgba(0, 0, 0, 0.4);
    font-family: monospace;
    margin: 0 auto;
    max-width: 600px;
    overflow: hidden;
  }

  .terminal-header {
    background: #383838;
    padding: 8px 12px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #464646;
  }

  .terminal-buttons {
    display: flex;
    gap: 8px;
    margin-right: 12px;
  }

  .terminal-buttons span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #ff5f56;
  }

  .terminal-buttons span:nth-child(2) {
    background: #ffbd2e;
  }

  .terminal-buttons span:nth-child(3) {
    background: #27c93f;
  }

  .terminal-title {
    color: #9da5b4;
    font-size: 14px;
  }

  .terminal-body {
    padding: 16px;
    background: linear-gradient(180deg, #1a1a1a 0%, #2b2b2b 100%);
  }

  .terminal-line {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #98c379;
    font-size: 1.25rem;
    line-height: 1.5;
  }

  .terminal-prompt {
    color: #61afef;
  }

  .terminal-text {
    color: #98c379;
  }

  .terminal-cursor {
    animation: blink 1s step-end infinite;
    color: #98c379;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
</style>