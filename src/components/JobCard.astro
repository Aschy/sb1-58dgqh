---
interface Props {
  job: {
    id: string;
    title: string;
    location: string;
    contractType: string;
    description: string;
    responsibilities: {
      title: string;
      items: string[];
    }[];
    technicalRequirements: string[];
    personalRequirements: string[];
    certifications: string[];
    benefits: string[];
    applicationEmail: string;
    reference: string;
  };
}

const { job } = Astro.props;
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden">
  <div class="p-8">
    <div class="border-b pb-6 mb-6">
      <h3 class="text-2xl font-bold mb-2">{job.title}</h3>
      <div class="flex flex-wrap gap-4 text-gray-600 mb-4">
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>{job.location}</span>
        </div>
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span>{job.contractType}</span>
        </div>
      </div>
      <p class="text-gray-600">{job.description}</p>
    </div>

    <div class="space-y-6">
      {job.responsibilities.map((section) => (
        <div>
          <h4 class="text-lg font-semibold mb-3">{section.title}</h4>
          <ul class="list-disc pl-5 space-y-2">
            {section.items.map((item) => (
              <li class="text-gray-600">{item}</li>
            ))}
          </ul>
        </div>
      ))}

      <div>
        <h4 class="text-lg font-semibold mb-3">Compétences techniques</h4>
        <ul class="list-disc pl-5 space-y-2">
          {job.technicalRequirements.map((req) => (
            <li class="text-gray-600">{req}</li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-3">Compétences personnelles</h4>
        <ul class="list-disc pl-5 space-y-2">
          {job.personalRequirements.map((req) => (
            <li class="text-gray-600">{req}</li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-3">Certifications (un plus)</h4>
        <div class="flex flex-wrap gap-2">
          {job.certifications.map((cert) => (
            <span class="bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">
              {cert}
            </span>
          ))}
        </div>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-3">Ce que nous offrons</h4>
        <ul class="list-disc pl-5 space-y-2">
          {job.benefits.map((benefit) => (
            <li class="text-gray-600">{benefit}</li>
          ))}
        </ul>
      </div>

      <div class="border-t pt-6 mt-6">
        <h4 class="text-lg font-semibold mb-3">Comment postuler ?</h4>
        <p class="text-gray-600">
          Envoyez votre CV et lettre de motivation à{' '}
          <a href={`mailto:${job.applicationEmail}`} class="text-blue-600 hover:text-blue-800">
            {job.applicationEmail}
          </a>
          {' '}en précisant la référence [{job.reference}].
        </p>
        <p class="text-gray-600 mt-4 italic">
          UNITE99 s'engage pour l'égalité des chances et encourage la diversité au sein de ses équipes.
        </p>
      </div>
    </div>
  </div>
</article>