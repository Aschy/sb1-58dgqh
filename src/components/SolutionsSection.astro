---
import { solutions } from '../content/solutions';

interface Props {
  lang?: string;
}

const { lang = 'fr' } = Astro.props;
---

<section id="solutions" class="scroll-section bg-gray-50">
  <div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold mb-6 text-center">
      {lang === 'fr' ? 'Solutions' : 'Solutions'}
    </h2>
    
    {solutions.map(solution => (
      <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-6">
          <h3 class="text-2xl font-bold mb-4">
            {solution.title[lang]}
          </h3>
          
          <p class="text-gray-600 mb-6 leading-relaxed">
            {solution.description[lang]}
          </p>
          
          <div class="space-y-3">
            {solution.features[lang].map(feature => (
              <div class="flex items-start">
                <span class="text-blue-600 mr-3">•</span>
                <p class="text-gray-700">{feature}</p>
              </div>
            ))}
          </div>
          
          <p class="mt-6 text-gray-700 italic">
            {lang === 'fr' 
              ? "Nos solutions ne se contentent pas de protéger : elles anticipent également les menaces potentielles, offrant à nos clients un avantage compétitif en cybersécurité."
              : "Our solutions are not only designed to protect but also to anticipate potential threats, giving our clients a competitive edge in cybersecurity."}
          </p>
        </div>
      </div>
    ))}
  </div>
</section>