---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import AboutSection from '../components/AboutSection.astro';
import SolutionsSection from '../components/SolutionsSection.astro';
import ResourcesSection from '../components/ResourcesSection.astro';
import { services } from '../content/services';
import { companyInfo } from '../content/company';

const lang = Astro.url.searchParams.get('lang') || 'fr';
---

<Layout title="Welcome to UNITE99">
  <section id="home" class="scroll-section">
    <Hero />
  </section>

  <AboutSection lang={lang} />

  <section id="services" class="scroll-section">
    <div class="container mx-auto px-4 py-8">
      <h2 class="text-3xl font-bold mb-6 text-center">Nos Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {services.map(service => (
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-bold mb-3">{service.title}</h3>
            <p class="text-gray-600">{service.description}</p>
            <ul class="mt-3 space-y-2">
              {service.features.map(feature => (
                <li class="flex items-center">
                  <span class="mr-2">•</span>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <SolutionsSection lang={lang} />
  
  <ResourcesSection lang={lang} />

  <section id="contact" class="scroll-section">
    <div class="container mx-auto px-4 py-8">
      <h2 class="text-3xl font-bold mb-6 text-center">Contactez-nous</h2>
      <div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-md">
        <div class="mb-6">
          <h3 class="text-xl font-bold mb-3">Nos Coordonnées</h3>
          <p class="text-gray-600">{companyInfo.address.street}</p>
          <p class="text-gray-600">{companyInfo.address.postalCode} {companyInfo.address.city}</p>
          <p class="text-gray-600 mt-2">Email: {companyInfo.contact.email}</p>
        </div>
      </div>
    </div>
  </section>
</Layout>